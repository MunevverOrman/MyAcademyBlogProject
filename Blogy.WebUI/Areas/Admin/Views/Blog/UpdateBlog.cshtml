@model UpdateBlogDto
@{
    ViewData["Title"] = "UpdateBlog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Blog Güncelle</h3>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">

        <label>Blog Başlığı</label>
        <input type="text" asp-for="Title" class="form-control" />
        <span class=" text-black-danger" asp-validation-for="Title"></span>

    </div>

    <div class="form-group">

        <label>Açıklama</label>
        <textarea type="text" asp-for="Description" class="form-control"></textarea>
        <span class=" text-black-danger" asp-validation-for="Description"></span>

    </div>
    <div class="form-group">

        <label>Kapak resmi</label>
        <input type="text" asp-for="CoverImage" class="form-control" />
        <span class=" text-black-danger" asp-validation-for="CoverImage"></span>

    </div>
    <div class="form-group">

        <label>Blog resmi 1</label>
        <input type="text" asp-for="BlogImage1" class="form-control" />
        <span class=" text-black-danger" asp-validation-for="BlogImage1"></span>

    </div>
    <div class="form-group">

        <label>Blog resmi 2</label>
        <input type="text" asp-for="BlogImage2" class="form-control" />
        <span class=" text-black-danger" asp-validation-for="BlogImage2"></span>
    </div>
    <div class="form-group">

        <label>Kategori</label>
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.categories">
            <option selected="">Kategori Seçiniz</option>
        </select>
    </div>
    <button class="btn btn-primary mt-2">Güncellet</button>

</form>